<div>
    <div class="reveal-modal-bg">
        <div class="modal-registrar">
            <h2 id="lblRegistro">Agregar Banner</h2>

            <input type="hidden" id="hdnSubcategoriaId" />
            <input type="hidden" id="hdnBannerId" />
            <input type="hidden" id="hdnBannerTraduccionId" />

            <div class="cont-box">
                <label class="cont-box-label">Idioma:</label>
                <select id="ddlIdioma" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Idioma--</option>
                </select>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Subcategoría:</label>
                <select id="ddlSubcategoria" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Categoría--</option>
                </select>
            </div>

            <input type="hidden" id="hdnImagenId" name="hdnImagenId" />
            <input type="hidden" id="hdnImagenTraduccionId" name="hdnImagenTraduccionId" />

            <div class="cont-box">
                <label class="cont-box-label">Imagen Desktop:</label>
                <div class="d-flex flex-column w-100">
                    <input id="fileImagenDesktop" type="file" class="cont-box-input" maxlength="255">
                    <span class="text-start small py-1">Dimensiones: 1920px X 501px</span>
                    <input type="hidden" id="txtImagenDesktop" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">&nbsp;</label>
                <div class="d-flex flex-column w-100 pb-3">
                    <img id="imgImagenDesktop" class="w-50" alt="" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Imagen Movil:</label>
                <div class="d-flex flex-column w-100">
                    <input id="fileImagenMovil" type="file" class="cont-box-input" maxlength="255">
                    <span class="text-start small py-1">Dimensiones: 390px X 334px</span>
                    <input type="hidden" id="txtImagenMovil" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">&nbsp;</label>
                <div class="d-flex flex-column w-100 pb-3">
                    <img id="imgImagenMovil" class="w-50" alt="" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Imagen Texto Alternativo:</label>
                <input id="txtImagenTextoAlternativo" type="text" class="cont-box-input" maxlength="250">
            </div>

            <div class="cont-box" style="display: none;">
                <label class="cont-box-label">Título:</label>
                <input id="txtTitulo" type="text" class="cont-box-input" maxlength="250">
            </div>

            <div class="cont-box" style="display: none;">
                <label class="cont-box-label">Bajada:</label>
                <input id="txtBajada" type="text" class="cont-box-input" maxlength="250">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Link:</label>
                <input id="txtLink" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box" style="width: 186px">
                <label class="cont-box-label">¿Ventana Nueva?:</label>

                <input type="checkbox" id="chkVentanaNueva" class="input-checkbox" checked="">
                <label for="chkVentanaNueva" class="input-checkbox-lab"> </label>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Orden:</label>
                <input id="txtOrden" type="number" class="cont-box-input">
            </div>

            <div class="cont-box" style="width: 186px">
                <label class="cont-box-label">Activo</label>

                <input type="checkbox" id="chkActivo" class="input-checkbox" checked="">
                <label for="chkActivo" class="input-checkbox-lab"> </label>
            </div>

            <div class="cont-box">
                <button id="btnGuardar" class="cont-box-submit">
                    <label>Registrar</label>
                </button>
            </div>
            <div class="cont-box">
                <button id="btnCancelar" class="cont-box-cancel close">
                    <label>Cancelar</label>
                </button>
            </div>
        </div>
    </div>
</div>

