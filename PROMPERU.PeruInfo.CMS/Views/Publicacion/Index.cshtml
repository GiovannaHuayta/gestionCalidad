<div class="l-contents">

    <div class="cont-cont">
        <div class="cont-header">
            <h1 class="cont-header-h1">Noticias y Blog</h1>
        </div>

        <nav class="cont-icons">
            <a id="btnNuevo" href="javascript:" class="cont-icons-new">
                <span class="fas icon-plus">
                </span><span>Nuevo</span>
            </a>
        </nav>

        <div class="cont-table" style="max-width:95%;">
            <table id="gridBloques" class="cont-left tableResponsive" style="min-width: 400px; width: 100%;">
                <thead>
                    <tr class="filter">
                        <th data-title="Nº" style="width: 5%"></th>
                        <th data-title="NombreSubcategoria" style="width: 5%">
                            <input type="text" id="gridPublicacion_txtB_NombreSubcategoria">
                        </th>
                        <th data-title="NombreTipo" style="width: 20%">
                            <input type="text" id="gridPublicacion_txtB_NombreTipo">
                        </th>
                        <th data-title="Titulo" style="width: 10%">
                            <input type="text" id="gridPublicacion_txtB_Titulo">
                        </th>
                        <th data-title="Destacado" style="width: 10%">
                            <input type="text" id="gridPublicacion_txtB_Destacado">
                        </th>
                        <th data-title="FechaPublicacion" style="width: 10%">
                            <input type="text" id="gridPublicacion_txtB_FechaPublicacion">
                        </th>
                        <th data-title="NombreIdioma" style="width: 10%">
                            <input type="text" id="gridPublicacion_txtB_NombreIdioma">
                        </th>
                        <th data-title="Activo" style="width: 10%">
                            <input type="text" id="gridPublicacion_txtB_Activo">
                        </th>
                        <th data-title="" style="width: 10%" align="center">
                            <div class="accion-box">
                                <a href="" title="Editar">
                                    <span class="fas fa-search"></span>
                                </a>

                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th style="width: 5%;">
                            <a id="a_RowNumber">Nº</a>
                        </th>
                        <th style="width: 5%;">
                            <a id="a_NombreSubcategoria">Subcategoria</a>
                        </th>
                        <th style="width: 20%;">
                            <a id="a_NombreTipo">Nombre de Tipo</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_Titulo">Titulo</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_Destacado">¿Destacado?</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_FechaPublicacion">Fecha de Publicacion</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_NombreIdioma">Nombre de Idioma</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_Activo">Activo</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_"></a>
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div>
    <div class="reveal-modal-bg">
        <div class="modal-registrar">
            <h2 id="lblRegistro">Crear Publicacion</h2>

            <input type="hidden" id="hdnPublicacionId" />
            <input type="hidden" id="hdnPublicacionTraduccionId" />

            <div class="cont-box">
                <label class="cont-box-label">Idioma:</label>
                <select id="ddlIdioma" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Idioma--</option>
                </select>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Sub Categoría:</label>
                <select id="ddlSubcategoria" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Subcategoría--</option>
                </select>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Tipo:</label>
                <select id="ddlTipo" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Tipo--</option>
                </select>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Imagen Portada:</label>
                <div class="d-flex flex-column w-100">
                    <input id="fileImagen" type="file" class="cont-box-input" maxlength="255">
                    <span class="text-start small py-1">Formato: JPG / PNG. Dimensiones: 660px X 324px</span>
                    <input type="hidden" id="txtImagen" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">&nbsp;</label>
                <div class="d-flex flex-column w-100 pb-3">
                    <img id="imgImagen" class="w-50" alt="" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Imagen Detalle Banner:</label>
                <div class="d-flex flex-column w-100">
                    <input id="fileImagen3" type="file" class="cont-box-input" maxlength="255">
                    <span class="text-start small py-1">Formato: JPG / PNG. Dimensiones: 1233px X 550px</span>
                    <input type="hidden" id="txtImagen3" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">&nbsp;</label>
                <div class="d-flex flex-column w-100 pb-3">
                    <img id="imgImagen3" class="w-50" alt="" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Alt Imagen:</label>
                <input id="txtAltImagen" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Fuente de Imagen:</label>
                <input id="txtImagenFuente" type="text" class="cont-box-input" maxlength="100">
            </div>

            <div class="cont-box" style="width: 186px">
                <label class="cont-box-label">¿Está destacado?</label>

                <input type="checkbox" id="chkDestacado" class="input-checkbox" checked="">
                <label for="chkDestacado" class="input-checkbox-lab"> </label>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Fecha de Publicación:</label>
                <input id="txtFechaPublicacion" type="date" class="cont-box-input" maxlength="25">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Título:</label>
                <input id="txtTitulo" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label id="lblUrl" class="cont-box-label">URL:</label>
                <input id="txtSlug" type="text" class="cont-box-input" readonly maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Resumen:</label>
                <div style="width: 553px;">
                    <textarea id="txtResumen" class="cont-box-input" rows="4" onkeyup="countChars(this);"></textarea>
                    <p id="charNum" style="text-align: right;">500 caracteres restantes</p>
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Imagen opcional dentro de contenido:</label>
                <div class="d-flex flex-column w-100">
                    <input id="fileImagenContenido" type="file" class="cont-box-input" maxlength="255">
                    <span class="text-start small py-1">Formato: JPG / PNG. Dimensiones: 900px X 504px</span>
                    <span class="text-start small py-1" style="color:blue;">URL de imagen:<br />
                        <label style="font-weight: 500;" id="linkArchivoContenido"></label>
                    </span>
                    <input type="hidden" id="txtImagenContenido" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Detalle:</label>
                <textarea id="txtDetalle" class="cont-box-input" rows="5"></textarea>
            </div>

            <div class="cont-box" style="width: 186px">
                <label class="cont-box-label">Activo:</label>

                <input type="checkbox" id="chkActivo" class="input-checkbox" checked="">
                <label for="chkActivo" class="input-checkbox-lab"> </label>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Descubre Nombre:</label>
                <input id="txtDescubreNombre" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Descubre Link:</label>
                <input id="txtDescubreLink" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Descubre Imagen:</label>
                <div class="d-flex flex-column w-100">
                    <input id="fileDescubreImagen" type="file" class="cont-box-input" maxlength="255">
                    <span class="text-start small py-1">Dimensiones: 900px X 504px</span>
                    <input type="hidden" id="txtDescubreImagen" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">&nbsp;</label>
                <div class="d-flex flex-column w-100 pb-3">
                    <img id="imgDescubreImagen" class="w-50" alt="" />
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Título SEO:</label>
                <input id="txtTituloSEO" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Descripcion SEO:</label>
                <div style="width: 553px;">
                    <textarea id="txtDescripcionSEO" class="cont-box-input" rows="4" onkeyup="countCharsSEO(this);"></textarea>
                    <p id="charNumSEO" style="text-align: right;">255 caracteres restantes</p>
                </div>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">KeyWords:</label>
                <input id="txtKeyWords" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <button id="btnGuardar" class="cont-box-submit">
                    <label>Registrar</label>
                </button>
            </div>
            <div class="cont-box">
                <button id="btnCancelar" class="cont-box-cancel close">
                    <label>Cancelar</label>
                </button>
            </div>
        </div>
    </div>
</div>

