<div class="l-contents">

    <div class="cont-cont">
        <div class="cont-header">
            <h1 class="cont-header-h1">Menú Página</h1>
        </div>

        <nav class="cont-icons">
            <a id="btnNuevo" href="javascript:" class="cont-icons-new">
                <span class="fas icon-plus">
                </span><span>Nuevo</span>
            </a>
        </nav>

        <div class="cont-table">
            <table id="gridBloques" class="cont-left tableResponsive" style="width: 100%; min-width: 400px; max-width: 1000px;">
                <thead>
                    <tr class="filter">
                        <th data-title="Nº" style="width: 5%"></th>
                        @*<th data-title="NombreSubCategoria" style="width: 5%">
                                <input type="text" id="gridTarjeta_txtB_NombreSubCategoria">
                            </th>*@
                        <th data-title="NombreIdioma" style="width: 20%">
                            <input type="text" id="gridTarjeta_txtB_NombreIdioma">
                        </th>
                        <th data-title="Titulo" style="width: 20%">
                            <input type="text" id="gridTarjeta_txtB_Titulo">
                        </th>
                        <th data-title="Slug" style="width: 20%">
                            <input type="text" id="gridTarjeta_txtB_Slug">
                        </th>
                        <th data-title="Activo" style="width: 10%">
                            <input type="text" id="gridTarjeta_txtB_Activo">
                        </th>

                        <th data-title="" style="width: 10%" align="center">
                            <div class="accion-box">
                                <a href="" title="Editar">
                                    <span class="fas fa-search"></span>
                                </a>

                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th style="width: 5%;">
                            <a id="a_RowNumber">Nº</a>
                        </th>
                        @*<th style="width: 5%;">
            <a id="a_NombreSubCategoria">Posición</a>
        </th>*@
                        <th style="width: 20%;">
                            <a id="a_NombreIdioma">Nombre de Idioma</a>
                        </th>
                        <th style="width: 20%;">
                            <a id="a_Titulo">Nombre</a>
                        </th>
                        <th style="width: 20%;">
                            <a id="a_Slug">Slug</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_Activo">Activo</a>
                        </th>
                        <th style="width: 10%;">
                            <a id="a_"></a>
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div>
    <div class="reveal-modal-bg">
        <div class="modal-registrar">
            <h2 id="lblRegistro">Crear Menú Página</h2>

            <input type="hidden" id="hdnTarjetaId" />
            <input type="hidden" id="hdnTarjetaTraduccionId" />

            <div class="cont-box">
                <label class="cont-box-label">Idioma:</label>
                <select id="ddlIdioma" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Idioma--</option>
                </select>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Página Superior:</label>
                <select id="ddlPaginaPadre" class="cont-box-select">
                    <option value="0" disabled="disabled" selected="selected" class="option-disabled">--Seleccione Página Superior--</option>
                </select>
            </div>

            <div class="cont-box" style="display: none;">
                <label class="cont-box-label">Posición:</label>
                <select id="ddlPosicion" class="cont-box-select">
                    <option value="0" disabled="disabled" class="option-disabled">--Seleccione Posición--</option>
                    <option value="Header">Header</option>
                    <option value="Home">Home</option>
                    <option value="Categoria" selected="">Categoría</option>
                    <option value="Footer">Footer</option>
                </select>
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Nombre:</label>
                <input id="txtNombre" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Ruta interna:</label>
                <input id="txtSlug" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Link Externo:</label>
                <input id="txtLinkExterno" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Orden:</label>
                <input id="txtOrden" type="number" class="cont-box-input">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Titulo SEO:</label>
                <input id="txtTituloSEO" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Descripcion SEO:</label>
                <input id="txtDescripcionSEO" type="text" class="cont-box-input" maxlength="300">
            </div>

            <div class="cont-box">
                <label class="cont-box-label">Canonical Url SEO:</label>
                <input id="txtCanonicalUrlSEO" type="text" class="cont-box-input" maxlength="255">
            </div>

            <div class="cont-box" style="width: 186px">
                <label class="cont-box-label">Activo:</label>

                <input type="checkbox" id="chkActivo" class="input-checkbox" checked="">
                <label for="chkActivo" class="input-checkbox-lab"> </label>
            </div>

            <div class="cont-box">
                <button id="btnGuardar" class="cont-box-submit">
                    <label>Registrar</label>
                </button>
            </div>
            <div class="cont-box">
                <button id="btnCancelar" class="cont-box-cancel close">
                    <label>Cancelar</label>
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .dataTables_info {
        display: none;
    }

    .paginate_button {
        display: none;
    }

    .dataTables_length {
        display: none;
    }

    .dataTables_filter {
        display: none;
    }
</style>